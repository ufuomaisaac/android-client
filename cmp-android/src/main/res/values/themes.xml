<resources>
<style name="Theme.AndroidClientTheme" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">#FFFDFDF5</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/feature_client_ic_launcher</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
    <item name="windowSplashScreenAnimationDuration">10</item>
</style>

<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:statusBarColor">@color/background</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsTranslucent">true</item>
</style>
</resources>